<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jmew.ca.pulseplayer" >

    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault" >
        <activity
            android:name="jmew.ca.pulseplayer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="jmew.ca.pulseplayer.SongsActivity" >
            <intent-filter>
                <action android:name="uwaterloo.ca.wearplayer.SongsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="jmew.ca.pulseplayer.ArtistsActivity" >
            <intent-filter>
                <action android:name="uwaterloo.ca.wearplayer.ArtistsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="jmew.ca.pulseplayer.PlaylistsActivity" >
            <intent-filter>
                <action android:name="uwaterloo.ca.wearplayer.PlaylistsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="jmew.ca.pulseplayer.PulseActivity" >
            <intent-filter>
                <action android:name="uwaterloo.ca.wearplayer.PulseActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
